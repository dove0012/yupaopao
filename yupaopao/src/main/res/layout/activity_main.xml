<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dove0012.yupaopao.activitys.MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/main_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/tabbar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/radiogroup_bg"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/collect_cursor"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:scaleType="matrix"
            android:src="@drawable/ic_collect_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47.0dip" >

            <TextView
                android:id="@+id/collect_title1"
                android:text="游神"
                style="@style/main_title" />

            <TextView
                android:id="@+id/collect_title2"
                android:text="探索"
                style="@style/main_title" />

            <TextView
                android:id="@+id/collect_title3"
                android:text="消息"
                style="@style/main_title" />

            <TextView
                android:text="我的"
                android:id="@+id/collect_title4"
                style="@style/main_title" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>